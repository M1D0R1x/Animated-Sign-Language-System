{
  "version": 2,
  "builds": [
    {
      "src": "animated_sign_language_system/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "animated_sign_language_system/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "animated_sign_language_system.settings"
  },
  "build": {
    "env": {
      "PYTHONPATH": "."
    },
    "command": "bash build_files.sh"
  }
}